<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/layout_item_ws"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCF2FB"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_active_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_checked"
            android:visibility="gone"
            app:tint="#0079BF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ws_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên không gian làm việc"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ws_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả..."
                android:textColor="#666666"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_ws_options"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_menu_option"
            app:tint="#444444" />

    </LinearLayout>
</androidx.cardview.widget.CardView>