<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#607D8B"
    tools:context=".ui.fragments.taobangmoi.TaoBangMoiFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_input_fields"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_tenBang"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên bảng">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_tenBang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:text="SuperIdol" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tv_quyenXem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quyền xem"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_quyenXem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:entries="@array/quyen_xem_options"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/tv_khongGianLamViec_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Không gian làm việc"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/spinner_khongGianLamViec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:entries="@array/khong_gian_lam_viec_options"
                android:minHeight="48dp"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>


            <TextView
                android:id="@+id/tv_phongNenBang_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phông nền bảng"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="8dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_selectedColor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Màu nền hiện tại"
                        android:textSize="16sp"/>

                    <View
                        android:id="@+id/view_color_indicator"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/shape_color_indicator" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_taoBang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Tạo bảng"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:backgroundTint="#FF9800"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>