<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="2dp"
    android:paddingBottom="12dp"
    android:paddingTop="8dp"
    android:background="#E6FAFE">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        android:contentDescription="Avatar nguoi dung" />

    <TextView
        android:id="@+id/tv_noidung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/img_avatar"
        app:layout_constraintStart_toEndOf="@id/img_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Nội dung" />

    <TextView
        android:id="@+id/tv_thoigian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_noidung"
        app:layout_constraintTop_toBottomOf="@id/tv_noidung"
        tools:text="Thời gian" />

    <Button
        android:id="@+id/btn_xacnhan"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:minHeight="0dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="#66C5EB"
        app:layout_constraintStart_toStartOf="@id/tv_noidung"
        app:layout_constraintTop_toBottomOf="@id/tv_thoigian"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Xác nhận"
        />

</androidx.constraintlayout.widget.ConstraintLayout>