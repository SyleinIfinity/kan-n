<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="2dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="#E6FAFE">

    <ImageView
        android:id="@+id/img_avatar_nho"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        android:contentDescription="Avatar nguoi dung" />

    <TextView
        android:id="@+id/tv_noidung_lichsu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/img_avatar_nho"
        app:layout_constraintStart_toEndOf="@id/img_avatar_nho"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Nội dung" />

    <TextView
        android:id="@+id/tv_time_lichsu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_noidung_lichsu"
        app:layout_constraintTop_toBottomOf="@id/tv_noidung_lichsu"
        tools:text="thời gian" />

</androidx.constraintlayout.widget.ConstraintLayout>