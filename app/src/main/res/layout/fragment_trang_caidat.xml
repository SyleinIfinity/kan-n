<!-- res/layout/activity_main.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề chính -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@android:color/white" />

        <!-- Mô thiệt lập hệ thống -->
        <include layout="@layout/item_trang_caidat" android:id="@+id/item_mothietlaphethong"/>
        <include layout="@layout/item_trang_caidat" android:id="@+id/item_dathengiongu"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chủ đề ứng dụng"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@android:color/white" />

        <include layout="@layout/item_trang_caidat" android:id="@+id/item_chonchude"/>
        <include layout="@layout/item_trang_caidat" android:id="@+id/item_phongcach"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng quan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@android:color/white" />

        <include layout="@layout/item_trang_caidat" android:id="@+id/item_hoso"/>
        <include layout="@layout/item_trang_caidat" android:id="@+id/item_ngonngu"/>
        <include layout="@layout/item_trang_caidat" android:id="@+id/item_timhieuvekann"/>
        <include layout="@layout/item_trang_caidat" android:id="@+id/item_lienhehotro"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bảo mật"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@android:color/white" />

        <include layout="@layout/item_trang_caidat" android:id="@+id/item_baomatvaquyenriengtu"/>
        <include layout="@layout/item_trang_caidat" android:id="@+id/item_kiemtralichsudangnhap"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:background="@android:color/white" />

        <include layout="@layout/item_trang_caidat" android:id="@+id/item_xoataikhoan"/>
        <include layout="@layout/item_trang_caidat" android:id="@+id/item_dangxuat"/>

    </LinearLayout>
</ScrollView>
