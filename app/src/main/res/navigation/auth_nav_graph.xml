<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/khoiDongFragment">

    <fragment
        android:id="@+id/khoiDongFragment"
        android:name="com.kan_n.ui.fragments.auth.KhoiDongFragment"
        android:label="Khởi động"
        tools:layout="@layout/fragment_trang_khoidong" >
        <action
            android:id="@+id/action_khoiDongFragment_to_dangNhapFragment"
            app:destination="@id/dangNhapFragment" />
        <action
            android:id="@+id/action_khoiDongFragment_to_dangKyFragment"
            app:destination="@id/dangKyFragment" />
    </fragment>

    <fragment
        android:id="@+id/dangNhapFragment"
        android:name="com.kan_n.ui.fragments.auth.DangNhapFragment"
        android:label="Đăng nhập"
        tools:layout="@layout/fragment_trang_dangnhap">
        <action
            android:id="@+id/action_dangNhapFragment_to_nhapGmailFragment"
            app:destination="@id/nhapGmailFragment" />
    </fragment>


    <fragment
        android:id="@+id/dangKyFragment"
        android:name="com.kan_n.ui.fragments.auth.DangKyFragment"
        android:label="Đăng ký"
        tools:layout="@layout/fragment_trang_dangky" >
        <action
            android:id="@+id/action_dangkyFragment_to_nhapOtpFragment"
            app:destination="@id/nhapOtpFragment" />
    </fragment>

    <fragment
        android:id="@+id/nhapGmailFragment"
        android:name="com.kan_n.ui.fragments.auth.NhapGmailFragment"
        android:label="Nhập Gmail"
        tools:layout="@layout/fragment_nhap_gmail" >
        <action
            android:id="@+id/action_nhapGmailFragment_to_nhapOtpFragment"
            app:destination="@id/nhapOtpFragment" />
    </fragment>

    <fragment
        android:id="@+id/nhapOtpFragment"
        android:name="com.kan_n.ui.fragments.auth.NhapOtpFragment"
        android:label="Nhập Gmail"
        tools:layout="@layout/fragment_nhap_otp" >
        <action
            android:id="@+id/action_nhapOtpFragment_to_nhapLaiMatKhauFragment"
            app:destination="@id/nhapLaiMatKhauFragment" />
    </fragment>

    <fragment
        android:id="@+id/nhapLaiMatKhauFragment"
        android:name="com.kan_n.ui.fragments.auth.NhapLaiMatKhauFragment"
        android:label="Nhập Gmail"
        tools:layout="@layout/fragment_nhaplai_matkhau" />


</navigation>