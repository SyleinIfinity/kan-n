<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kann" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Kann" parent="Base.Theme.Kann" />

    <style name="Widget.App.ShapeableImageView.CornerRight" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/cardview_default_radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/cardview_default_radius</item>
    </style>
    <style name="Style.Input.Kann" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">#000000</item> <item name="boxStrokeWidth">1.5dp</item>
        <item name="hintTextColor">#757575</item>
    </style>

    <style name="Style.Button.Kann" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">6dp</item>
        <item name="strokeColor">#356C85</item> <item name="strokeWidth">1.5dp</item>
        <item name="android:textColor">#356C85</item> <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item> <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>